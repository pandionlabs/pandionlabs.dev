---
import { Image } from 'astro:assets'
import logo from '@assets/images/pandionlabs_logo.svg'
// Note: If you have a Pandion Labs logo, you should replace the import above with your actual logo file

/**
 * Logo Component
 *
 * @description Logo description
 */
interface Props {
  /**
   * Whether to load the image eagerly or lazily
   * @default 'eager'
   */
  loading?: 'eager' | 'lazy'
}

const { loading = 'eager' }: Props = Astro.props
---

<a href="/" class="flex items-center gap-2 !no-underline">
  <Image src={logo} alt="Pandion Labs Logo. A silouhette of a black osprey infront of a green circle. PANDION LABS is spelled out in black text" width="150" loading={loading} />
  <!-- <span class="font-bold">Pandion Labs</span> -->
</a>

<style lang="scss">
  a {
    color: var(--foreground-color);
  }
</style>
