---
import GradientBorder from '@components/GradientBorder.astro'
import { Image } from 'astro:assets'

const { profileImage, name, experience, education } = Astro.props
---

<GradientBorder padding={false}>
  <Image src={profileImage} alt={name} />
  <div class="flex flex-col p-6">
    <h3 class="text-3xl">{name}</h3>
    <p>{experience}</p>
    <p class="self-end italic">{education}</p>
  </div>
</GradientBorder>
