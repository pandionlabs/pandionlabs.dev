---
import GradientBorder from '@components/GradientBorder.astro'
import { Image } from 'astro:assets'

const { profileImage, name } = Astro.props
---

<GradientBorder padding={false}>
  <Image src={profileImage} alt={name} />
  <div class="p-6">
    <h3 class="text-3xl">{name}</h3>
    <slot />
  </div>
</GradientBorder>
