---
import { Card } from 'accessible-astro-components'

const { profileImage, name } = Astro.props
---

<Card imageComponent={profileImage} title={name} width="512" height="512" class="team-card">
  <div class="text-left">
    <slot />
  </div>
</Card>

<style>
  .team-card {
    block-size: 521px;
  }
  :global(.team-card .image) {
    /* filter: grayscale(100%); */
    block-size: 100%;
  }
</style>
