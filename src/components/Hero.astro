---
import { Icon } from 'astro-icon/components'

interface IconDetail {
  /** The name of the icon (e.g., from an icon pack recognized by astro-icon). */
  name: string
  /** The width of the icon. Can be a string (e.g., "24px") or a number (e.g., 24). */
  width?: string | number
  /** The height of the icon. Can be a string (e.g., "24px") or a number (e.g., 24). */
  height?: string | number
  /** Optional CSS class to apply to the icon's container div for specific styling. */
  class?: string
}

const iconBigSize = {
  width: 110,
  height: 100,
}

const iconSmallSize = {
  width: 80,
  height: 80,
}

const icons: IconDetail[] = [
  // This will be rendered in a 2x2 grid
  // First Row
  { name: 'lucide:code', ...iconSmallSize, class: 'icon-wrapper icon-secondar' },
  { name: 'lucide:bird', ...iconBigSize, class: 'icon-wrapper icon-primary' },
  // Second Row
  { name: 'lucide:trees', ...iconBigSize, class: 'icon-wrapper icon-primary' },
  { name: 'lucide:laptop', ...iconSmallSize, class: 'icon-wrapper icon-secondary' },
]
---

<section class="hero my-10 mb-25">
  <div class="container">
    <div class="grid grid-cols-1 items-start gap-24 lg:grid-cols-2">
      <div class="flex flex-col items-center gap-8 md:items-start">
        <h1 class="justify-start text-center text-6xl font-bold md:text-left lg:text-7xl">
          <span class="text-gradient-light">PANDION LABS</span>
        </h1>
        <h2 class="text-center text-4xl font-bold md:text-left">Code for Climate. Data for Nature.</h2>
        <p class="text-center text-xl md:text-left">
          Bridging the gap between science, nature, and software engineering
        </p>
        <div class="flex flex-col gap-3 min-[500px]:flex-row">
          <a class="button has-icon" href="#services">
            <Icon name="lucide:info" />
            Learn More
          </a>
          <a class="button has-icon color-secondary" href="#contact">
            <Icon name="lucide:mail" />
            Contact Us
          </a>
        </div>
      </div>
      <div class="icon-container self-center">
        <div class="mx-auto grid w-fit grid-cols-2 grid-rows-2 items-center justify-center gap-8">
          {
            icons.map((icon) => (
              <div class={icon.class || ''}>
                <Icon name={icon.name} width={icon.width} height={icon.height} />
              </div>
            ))
          }
        </div>
        <!-- <Icon name="hero-icon" desc="Nature analysis visualization" width={650} height={400} is:inline /> -->
      </div>
    </div>

    <style lang="scss">
      h1 {
        text-wrap: unset;
      }

      .icon-wrapper {
        /* display: flex; */
        /* justify-content: center;
        align-items: center; */
        place-self: center;
        transition:
          transform var(--animation-speed-fast, 0.2s) ease-in-out,
          box-shadow var(--animation-speed-fast, 0.2s) ease-in-out; // Using variable
        box-shadow: var(--elevation-3, 0 1px 3px rgba(0 0 0 / 0.12)); // Using variable
        border-radius: var(--radius-l, 0.75rem); // Using variable from _root.scss with fallback
        padding: 1.25rem;
      }

      .icon-wrapper:hover {
        transform: translateY(-5px) scale(1.05);
        box-shadow: var(--elevation-3, 0 10px 20px rgba(0 0 0 / 0.15));
      }

      .icon-primary {
        /* background-color: var(--color-primary-100); */
        color: var(--color-primary-200);
      }
      .icon-secondary {
        /* filter: grayscale(100%); */
        /* background-color: var(--color-secondary-100); */
        /* color: var(--color-secondar-200); */
      }

      [data-icon] {
        opacity: 0.75;
      }

      /* .icon-wrapper svg {
        filter: drop-shadow(4px 4px 4px rgba(0, 0, 0, 0.3));
      } */
    </style>
  </div>
</section>
