---
/**
 * GradientBackground Component
 *
 * @description A section with a full gradient background
 */
---

<div
  class="gradient-background container my-16 mt-8 mb-32 flex flex-col items-center gap-12 rounded-xl px-12 py-8 md:px-24"
>
  <slot />
</div>
<style lang="scss">
  @use '../assets/scss/base/mixins' as *;

  .gradient-background {
    position: relative;
    background-image: linear-gradient(
      315deg,
      light-dark(var(--color-primary-100), var(--color-secondary-100)) 25%,
      light-dark(var(--color-secondary-100), var(--color-primary-200))
    );

    color: var(--color-neutral-900);
  }
</style>
