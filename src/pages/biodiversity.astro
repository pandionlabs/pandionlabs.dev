---
import CallToAction from '@components/CallToAction.astro'
import DefaultLayout from '@layouts/DefaultLayout.astro'
import ServicesHero from '@components/ServicesHero.astro'
import FeaturesList from '@components/FeaturesList.astro'
import LineSeparator from '@components/LineSeparator.astro'
import GradientBorder from '@components/GradientBorder.astro'
import PandionDifference from '@components/PandionDifference.astro'

const heroIcons = [{ name: 'lucide:flower-2' }, { name: 'lucide:bug' }, { name: 'lucide:bird' }, { name: 'lucide:map' }]

const features = [
  { iconName: 'lucide:map', text: 'Plan, implement, and carry out field campaigns' },
  { iconName: 'lucide:dna', text: 'Produce species distribution models from private and open datasets' },
  {
    iconName: 'lucide:camera',
    text: 'Manage or develop IoT sensors (camera traps, passive bioacoustics, climate dataloggers)',
  },
  { iconName: 'lucide:ear', text: 'Process bioacoustic data and develop species detection models' },
  { iconName: 'lucide:radar', text: 'Integrate remote sensing data with ground truth datasets and community science' },
  { iconName: 'lucide:brain', text: 'Build relevant AI, deep learning, and computer vision tools' },
  { iconName: 'lucide:message-circle', text: 'Provide advice or feedback on methodologies and metrics' },
]
---

<DefaultLayout title="Code for Biodiversity">
  <ServicesHero pretitle="Code for" title="BIODIVERSITY" icons={heroIcons}>
    Advancing biodiversity research and monitoring with robust code and cutting-edge data solutions.
  </ServicesHero>

  <section class="container my-12">
    <p>
      From the field to analysis and annual reports, our team of ecological experts offer support for the complete
      lifecycle of biodiversity projects. Based on your project needs for biodiversity monitoring and mapping, we can:
    </p>

    <FeaturesList features={features} />
  </section>
  <LineSeparator />
  <PandionDifference />
</DefaultLayout>
